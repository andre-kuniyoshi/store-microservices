// Register.API
{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Elasticsearch" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://elasticsearch",
          "indexFormat": "OcelotApiGateway-Docker-{0:yyyy.MM}"
        }
      }
    ]
  },

  "ConnectionStrings": {
    "RegisterDB": "Server=sqlserverdb;Database=RegisterDB;User Id=sa;Password=Admin@1234;Encrypt=False;Trusted_Connection=False;"
  },

  "OpeniddictConfigs": {
    "RSAPublicKeyPath": "public-key.pem",
    "Issuer": "http://identity.localhost/"
  },

  "EventBusSettings": {
    "HostAddress": "amqp://guest:guest@rabbitmq"
  }
}